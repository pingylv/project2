<h3>Post details:</h3>
<hr />
<p>
	<%= @row['content'] %>
	<br />
	<br />
	Added at <%= @row['created_date'] %>
</p>
<hr />
<h4>Comments:</h4>
<hr />

<% @comments.each do |comment| %>
	<p>
		<i><%= comment['content'] %></i>
		<br />
		<span style="font-size: 90%; color: #888"> Added at <%= comment['created_date'] %> </span>
		<hr />
	</p>
<% end %>

<p>
<form  action="/details/<%=@row['id']%>" method="POST" role ="form">
    <textarea name="content" class="form-control" rows="3" placeholder="comment how you feel on the topic"></textarea>
  	</br>
 	 <button type="submit" class="btn btn-primary">Add comment</button>
</form>
</p>
